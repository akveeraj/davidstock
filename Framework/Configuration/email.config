	Email_ContactPass = "elysium08512"
	
	' Enter the name of the sender
	' e.g. `My Web Shop`
	
	Email_FromName    = "David Ostick Design & Build"
	
	' Use SSL when sending mail? ( CDONTS ONLY )
	' False = SSL OFF, True = SSL ON
	
	Email_UseSMTPSSL     = False

	' Specify a time limit the server has to respond before timing out
	' 30 to 60 seconds only ( CDONTS ONLY )
	
	Email_UseSMTPTimeOut = 60
	
	' Does the server require authentication? ( CDONTS ONLY )
	' 1 = Yes, 2 = No
	
	Email_SMTPAuth       = 0

